<%= error_messages_for @user %>
<% form_for @user, :action => url(:admin_users) do %>
  <p>
    <%= text_control :login, :label => "Login" %>
  </p>
  <p>
    <%= text_control :email, :label => "Email" %>
  </p>
  <p>
    <%= password_control :password, :label => "Password" %>
  </p>
  <p>
    <%= password_control :password_confirmation, :label => "Password Confirmation" %>
  </p>
  <p>
	<%= select_control :time_zone, :label => "Timezone", :collection => get_timezones %>
  </p>
  <p>
    <%= select_control :default_formatter, :label => "Default Formatter", :collection => Hooks::Formatters.available_formatters %>
  </p>
  <p>
    <%= submit_button "Create" %> or <%= link_to('Cancel', url(:admin_users)) %>
  </p>
<% end %>
